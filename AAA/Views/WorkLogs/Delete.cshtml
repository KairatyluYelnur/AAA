@model AAA.Models.WorkLog

@{
    ViewData["Title"] = "Удалить запись";
}

<div class="container mt-4">
    <h2 class="text-center text-danger mb-4">@ViewData["Title"]</h2>

    <div class="alert alert-warning text-center" role="alert">
        <h4>Вы уверены, что хотите удалить эту запись?</h4>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Сотрудник:</dt>
                <dd class="col-sm-9">@Model.Employee?.FullName</dd>

                <dt class="col-sm-3 fw-bold">Начало:</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("g")</dd>

                <dt class="col-sm-3 fw-bold">Окончание:</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("g")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="d-flex justify-content-between">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary px-4">Отмена</a>
    </form>
</div>

