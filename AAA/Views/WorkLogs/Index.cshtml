@model IEnumerable<AAA.Models.WorkLog>

@{
    ViewData["Title"] = "Рабочие часы";
}

<div class="container mt-4">
    <h2 class="text-center text-dark fw-bold mb-4 border-bottom pb-2">@ViewData["Title"]</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex justify-content-start mb-3">
            <a class="btn btn-success shadow-sm px-4 py-2" asp-action="Create">
                <i class="bi bi-plus-circle me-1"></i> Добавить запись
            </a>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm rounded-3 overflow-hidden">
            <thead class="text-center align-middle bg-light fw-bold">
                <tr>
                    <th>Сотрудник</th>
                    <th>Начало</th>
                    <th>Конец</th>
                    <th>Отработано (ч)</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Действия</th>
                    }
                </tr>
            </thead>
            <tbody class="text-center align-middle">
                @foreach (var log in Model)
                {
                    var hours = (log.EndTime - log.StartTime).TotalHours;
                    <tr>
                        <td class="fw-semibold">@log.Employee.FullName</td>
                        <td>@log.StartTime.ToString("g")</td>
                        <td>@log.EndTime.ToString("g")</td>
                        <td>@Math.Round(hours, 2)</td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@log.Id" class="btn btn-outline-primary btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@log.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
