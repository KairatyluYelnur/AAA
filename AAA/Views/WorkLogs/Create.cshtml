@model AAA.Models.WorkLog

@{
    ViewData["Title"] = "Добавить запись о работе";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" class="w-50 mx-auto">
    <div class="form-group mb-4">
        <label asp-for="EmployeeId" class="form-label">Сотрудник</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="@(ViewData["EmployeeId"] as SelectList)">
            <option value="">Выберите сотрудника</option>
        </select>
        <div class="invalid-feedback">
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-4">
        <label asp-for="StartTime" class="form-label">Время начала</label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
        <div class="invalid-feedback">
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-4">
        <label asp-for="EndTime" class="form-label">Время окончания</label>
        <input asp-for="EndTime" class="form-control" type="datetime-local" />
        <div class="invalid-feedback">
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success btn-lg">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Назад</a>
    </div>
</form>

