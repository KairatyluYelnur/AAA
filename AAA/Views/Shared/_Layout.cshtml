<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WorkTimeTracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Основные стили -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <!-- Секция для дополнительных стилей представлений -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Employees" asp-action="Index">
                    <i class="bi bi-clock-history me-2"></i>WorkTimeTracker
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employees" asp-action="Index">
                                <i class="bi bi-people me-1"></i>Сотрудники
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="WorkLogs" asp-action="Index">
                                <i class="bi bi-clock me-1"></i>Рабочие часы
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Payroll" asp-action="Index">
                                <i class="bi bi-cash-coin me-1"></i>Зарплата
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                                                <i class="bi bi-person-plus me-2"></i>Добавить пользователя
                                            </a>
                                        </li>
                                    }
                                
                                    <li><hr class="dropdown-divider"></li>
        <li>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="dropdown-item text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i>Выход
                </button>
            </form>
        </li>
    </ul>
</li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login" method="post">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Вход
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
    <main class="container flex-grow-1">
        @RenderBody()
    </main>

    <footer class="mt-auto py-3 bg-light">
        <div class="container text-center text-muted">
            &copy; @DateTime.Now.Year - WorkTimeTracker
        </div>
    </footer>

    <!-- Скрипты -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Секция для дополнительных скриптов -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>