@model IEnumerable<AAA.Models.Payroll>

@{
    ViewData["Title"] = "Зарплаты сотрудников";
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<form method="get" class="mb-4">
    <div class="form-group row align-items-center">
        <label for="from" class="col-auto col-form-label">Период с</label>
        <div class="col">
            <input type="date" name="from" id="from" class="form-control" value="@Context.Request.Query["from"]" />
        </div>
    </div>

    <div class="form-group row align-items-center mt-2">
        <label for="to" class="col-auto col-form-label">Период по</label>
        <div class="col">
            <input type="date" name="to" id="to" class="form-control" value="@Context.Request.Query["to"]" />
        </div>
    </div>

    <div class="form-group row mt-3">
        <div class="col">
            <button type="submit" class="btn btn-success px-4">Применить</button>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Сотрудник</th>
                <th>Период</th>
                <th>Отработано часов</th>
                <th>Зарплата</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Employee.FullName</td>
                    <td>@item.PeriodStart.ToShortDateString() - @item.PeriodEnd.ToShortDateString()</td>
                    <td>@item.TotalHours</td>
                    <td>@item.TotalPay.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>


