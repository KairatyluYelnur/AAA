@model AAA.Models.Employee
@{
    ViewData["Title"] = "Редактировать сотрудника";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label fw-semibold"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Position" class="form-label fw-semibold"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="HourlyRate" class="form-label fw-semibold"></label>
                <input asp-for="HourlyRate" class="form-control" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                <a asp-action="Index" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>
