@model AAA.Models.Employee

@{
    ViewData["Title"] = "Удалить сотрудника";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <h5>Вы уверены, что хотите удалить этого сотрудника?</h5>
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-end fw-semibold">ФИО</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3 text-end fw-semibold">Должность</dt>
            <dd class="col-sm-9">@Model.Position</dd>

            <dt class="col-sm-3 text-end fw-semibold">Ставка (₽/ч)</dt>
            <dd class="col-sm-9">@Model.HourlyRate</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Удалить
        </button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>
