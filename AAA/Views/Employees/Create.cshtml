@model AAA.Models.Employee

@{
    ViewData["Title"] = "Добавить сотрудника";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="card shadow rounded p-4 mx-auto" style="max-width: 600px;">
    <form asp-action="Create">
        <div class="form-group mb-3">
            <label asp-for="FullName" class="form-label fw-semibold"></label>
            <input asp-for="FullName" class="form-control" placeholder="Введите ФИО" />
            <span asp-validation-for="FullName" class="text-danger small"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Position" class="form-label fw-semibold"></label>
            <input asp-for="Position" class="form-control" placeholder="Введите должность" />
            <span asp-validation-for="Position" class="text-danger small"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="HourlyRate" class="form-label fw-semibold"></label>
            <input asp-for="HourlyRate" class="form-control" placeholder="Введите почасовую ставку" />
            <span asp-validation-for="HourlyRate" class="text-danger small"></span>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-4">Сохранить</button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Назад</a>
        </div>
    </form>
</div>
