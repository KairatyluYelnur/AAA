@{
    ViewData["Title"] = "Вход";
}

<!-- Bootstrap CSS и Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />



<!-- Стили -->
<style>
    body {
        background: linear-gradient(120deg, #fdfbfb, #ebedee);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

    }

    .card {
        animation: fadeIn 0.6s ease-in-out;
        border: none;
        border-radius: 1.5rem;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        border-radius: 0.5rem;
    }

    .nav-link {
        color: #0d6efd;
        text-decoration: none;
    }

        .nav-link:hover {
            text-decoration: underline;
        }
</style>

<!-- Центрированный блок формы (но теперь не центрирован) -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h2 class="text-center mb-4">Вход</h2>

                    <form method="post">
                        <!-- Логин -->
                        <div class="mb-3 input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text" name="username" class="form-control" placeholder="Введите логин" required />
                        </div>

                        <!-- Пароль + показать/скрыть -->
                        <div class="mb-3 input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" name="password" id="passwordField" class="form-control" placeholder="Введите пароль" required />
                        </div>

                        <!-- Чекбокс "Запомнить меня" -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="remember" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                Запомнить меня
                            </label>
                        </div>

                        <!-- Кнопка входа -->
                        <div class="d-grid gap-2 mb-2">
                            <button type="submit" class="btn btn-primary">Войти</button>
                        </div>

                        <!-- Ссылка на регистрацию -->
                        <div class="text-center">
                            <a class="nav-link d-inline-block" asp-controller="Account" asp-action="Register">Регистрация</a>
                        </div>

                        <!-- Ошибка -->
                        @if (ViewBag.Error != null)
                        {
                            <div class="text-danger text-center mt-3">@ViewBag.Error</div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Скрипт для показа/скрытия пароля -->
<script>
    function togglePassword() {
        const field = document.getElementById('passwordField');
        const icon = document.getElementById('eyeIcon');
        if (field.type === 'password') {
            field.type = 'text';
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
        } else {
            field.type = 'password';
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
        }
    }
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
