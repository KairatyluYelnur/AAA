@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<style>
    body {
        background: linear-gradient(120deg, #f8f9fa, #e9ecef);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 500px;
        margin-top: 50px;
        animation: fadeIn 0.6s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .password-container {
        position: relative;
    }

    .bi-eye-slash, .bi-eye {
        cursor: pointer;
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        z-index: 2;
    }
</style>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-body p-4">
            <h2 class="text-center mb-4">Регистрация</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form method="post" asp-action="Register">
                <!-- Логин -->
                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Введите логин" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Полное имя -->
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                        <input asp-for="FullName" class="form-control" placeholder="Введите ваше имя" />
                    </div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Пароль -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group password-container">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" id="password" class="form-control" placeholder="Введите пароль" />
                        <i class="bi bi-eye-slash" id="togglePassword"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Подтверждение пароля -->
                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Чекбокс администратора -->
                @if (User.IsInRole("Admin"))
                {
                    <div class="form-check mb-4">
                        <input asp-for="IsAdmin" class="form-check-input" />
                        <label asp-for="IsAdmin" class="form-check-label"></label>
                    </div>
                }

                <!-- Кнопка регистрации -->
                <button type="submit" class="btn btn-success w-100 py-2">Зарегистрироваться</button>

                <!-- Ссылка на вход -->
                <div class="text-center mt-3">
                    Уже есть аккаунт? <a asp-controller="Account" asp-action="Login" class="text-success">Войти</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Переключение видимости пароля
        const togglePassword = document.getElementById('togglePassword');
        const passwordField = document.getElementById('password');

        togglePassword.addEventListener('click', () => {
            const type = passwordField.type === 'password' ? 'text' : 'password';
            passwordField.type = type;
            togglePassword.classList.toggle('bi-eye');
            togglePassword.classList.toggle('bi-eye-slash');
        });
    </script>
}